pipeline {

    agent  any
    environment {
        IMAGE_NAME = "my-go-app"
    }

    tools { go "1.23.4"}
    

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sri2103/sample-go.git'
            }
        }

        stage('Build Go App') {
            steps {
                sh 'go version'
                sh 'go mod tidy'
                sh 'go build -o myapp'
            }
        }

         stage('Check Docker Access') {
            steps {
                docker.image('docker:25.0').inside('-v /var/run/docker.sock:/var/run/docker.sock') {
                    sh 'docker ps'
                }
            }
        }
    }

        // stage('Run Tests') {
        //     steps {
        //         sh 'go test ./...'
        //     }
        // }

        // stage('Build Docker Image') {
        //     steps {
        //         script {
        //             docker.build("${IMAGE_NAME}:latest")
        //         }
        //     }
        // }

        // stage('Deploy Locally') {
        //     steps {
        //         sh 'docker rm -f my-go-app || true'
        //         sh 'docker run -d -p 8080:8080 --name my-go-app my-go-app:latest'
        //     }
        // }
    }
}
