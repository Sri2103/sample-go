pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-go-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sri2103/sample-go.git'
            }
        }

        stage('Go Build & Test') {
            agent {
                docker {
                    image 'golang:1.23'
                    args '-v $PWD:/app -w /app'
                }
            }
            steps {
                sh 'go version'
                sh 'go mod tidy'
                sh 'go build -o myapp'   // local build for testing only
                sh 'go test ./...'
            }
        }

        stage('Build Docker Image') {
            agent {
                docker {
                    image 'docker:25'
                    args '-e DOCKER_HOST=tcp://host.docker.internal:2375'
                }
            }
            steps {
                script {
                    // This Dockerfile does the real build (multi-stage)
                    docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                sh 'docker rm -f my-go-app || true'
                sh 'docker run -d -p 8080:8080 --name my-go-app my-go-app:latest'
            }
        }
    }
}
