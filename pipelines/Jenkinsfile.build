pipeline {
    agent any 

    environment {
        IMAGE_NAME = "my-go-app"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Checkout') {
            checkout scm 
        }

        stage ('Build Docker image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:latest .'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}